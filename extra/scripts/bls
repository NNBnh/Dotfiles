# Values
RAW_MODE="${1:-false}"

[ "$RAW_MODE" != 'true' ] && {
	ICONS='true'
	STYLE='true'
}

for file in .* *; do
	if [ -h "$file" ]; then
		check=$(readlink "$file")
	else
		check="$file"
	fi

	if [ -d "$check" ]; then
		directories="${directories:+$directories\n}${STYLE:+\033[1m}${ICONS:+üìÅ}$file\033[0m"
	elif [ -e "$check" ] || [ -h "$file" ]; then
		files="${files:+$files\n}${STYLE:+\033[0m}${ICONS:+üìÑ}$file\033[0m"
	fi
done


# Start
printf "${directories:+$directories\n}$files"


exit 0
