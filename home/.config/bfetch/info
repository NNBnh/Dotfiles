#!/bin/sh


# Functions
capitalizing_first_character() {
	text=$(cat -)
	first=$(printf '%s' "$text" | tr '[:lower:]' '[:upper:]' | cut -c '1')
	other=$(printf '%s' "$text" | cut -c '2-')

	printf '%s' "$first$other"
}


# Values
COLOR="${BUI_COLOR_TEXTART:-32}"
OS=$( (uname -n; uname -s) | tr '\n' ' ' | capitalizing_first_character)
WM=$("$HOME/c/extra/fetchutils/src/wm.sh" 2>&-); [ -n "$WM" ] && [ "${#WM}" -gt '16' ] && WM='Sway'
SHELL=$(basename "$SHELL" | capitalizing_first_character)
TERMINAL=$(basename "$TERMINAL" | capitalizing_first_character)
FONT="$BUI_FONT_MONO_FAMILY"

[ "$TERM" != 'linux' ] && {
	      OS_ICON='üíæ'
	      WM_ICON='üñº '
	   SHELL_ICON='üêö'
	TERMINAL_ICON='üìü'
	    FONT_ICON='üè∑ '
}


# Start
printf "\033[1;38;5;${COLOR}mOS        \033[0m$OS_ICON ${OS:-OS}\033[0m
\033[1;38;5;${COLOR}mWM        \033[0m$WM_ICON ${WM:-WM}\033[0m
\033[1;38;5;${COLOR}mSHELL     \033[0m$SHELL_ICON ${SHELL:-Shell}\033[0m
\033[1;38;5;${COLOR}mTERMINAL  \033[0m$TERMINAL_ICON ${TERMINAL:-Terminal}\033[0m
\033[1;38;5;${COLOR}mFONT      \033[0m$FONT_ICON ${FONT:-Font}\033[0m"


exit 0
