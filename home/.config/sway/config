# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

exec_always "exec ~/.config/env"

font pango:Iosevka Extended 12
smart_borders no_gaps
smart_gaps yes
default_border normal 2px
title_align center
gaps inner 12px
gaps outer 2px
titlebar_border_thickness 2
titlebar_padding 16 2
exec_always sway client.focused          "$BUI_COLOR_CURSOR"    "$BUI_COLOR_CURSOR"    "$BUI_COLOR_BACKGROUND" "$BUI_COLOR_CURSOR_ALT" "$BUI_COLOR_CURSOR"
exec_always sway client.focused_inactive "$BUI_COLOR_SELECTION" "$BUI_COLOR_SELECTION" "$BUI_COLOR_FOREGROUND" "$BUI_COLOR_CURSOR_ALT" "$BUI_COLOR_SELECTION"
exec_always sway client.unfocused        "$BUI_COLOR_SELECTION" "$BUI_COLOR_SELECTION" "$BUI_COLOR_FOREGROUND" "$BUI_COLOR_CURSOR_ALT" "$BUI_COLOR_SELECTION"
exec_always sway client.urgent           "$BUI_COLOR_BASE08"    "$BUI_COLOR_BASE08"    "$BUI_COLOR_BACKGROUND" "$BUI_COLOR_CURSOR_ALT" "$BUI_COLOR_BASE08"

default_orientation auto
workspace_layout tabbed
focus_follows_mouse no
focus_wrapping no

exec_always swaybg --mode fill --image "$XDG_DATA_HOME/wallpapers/johnn21/brown-wooden-table-and-chairs-near-white-concrete-building-during-daytime.jpg"

set $gnome-schema org.gnome.desktop.interface

exec_always {
	gsettings set $gnome-schema gtk-theme    'Matcha-dark-aliz'
	gsettings set $gnome-schema icon-theme   'Papirus-Dark'
	gsettings set $gnome-schema font-name    'Iosevka Extended 12'
}


### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4

set $left  j
set $down  k
set $up	   i
set $right l

### Idle configuration
#
# Example configuration:
#
# exec swayidle -w \
#		  timeout 300 'swaylock -f -c 000000' \
#		  timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
#		  before-sleep 'swaylock -f -c 000000'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

### Input configuration
#
# Example configuration:
#
#   input "2:14:SynPS/2_Synaptics_TouchPad" {
#	   dwt enabled
#	   tap enabled
#	   natural_scroll enabled
#	   middle_emulation enabled
#   }
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

### Key bindings
#
# Basics:
#

	# Drag floating windows by holding down $mod and left mouse button.
	# Resize them with right mouse button + $mod.
	# Despite the name, also works for non-floating windows.
	# Change normal to inverse to use left mouse button for resizing and right
	# mouse button for dragging.
	floating_modifier $mod normal

	# Reload the configuration file
	bindsym $mod+Ctrl+Escape reload

	# Exit sway (logs you out of your Wayland session)
	bindsym $mod+Shift+Escape exec "swaymsg exit"
#
# Moving around:
#
	bindsym $mod+Left  focus left
	bindsym $mod+Down  focus down
	bindsym $mod+Up    focus up
	bindsym $mod+Right focus right

	bindsym $mod+$left  focus left
	bindsym $mod+$down  focus down
	bindsym $mod+$up    focus up
	bindsym $mod+$right focus right

	bindsym $mod+Ctrl+Left  move left  8px
	bindsym $mod+Ctrl+Down  move down  8px
	bindsym $mod+Ctrl+Up    move up	   8px
	bindsym $mod+Ctrl+Right move right 8px

	bindsym $mod+Ctrl+$left  move left  8px
	bindsym $mod+Ctrl+$down  move down  8px
	bindsym $mod+Ctrl+$up    move up	8px
	bindsym $mod+Ctrl+$right move right 8px

	bindsym $mod+Ctrl+equal       resize grow   width  8px
	bindsym $mod+Ctrl+minus       resize shrink width  8px
	bindsym $mod+Alt+equal        resize grow   height 8px
	bindsym $mod+Alt+minus        resize shrink height 8px
	bindsym $mod+Ctrl+Shift+equal resize grow   width  1px
	bindsym $mod+Ctrl+Shift+minus resize shrink width  1px
	bindsym $mod+Alt+Shift+equal  resize grow   height 1px
	bindsym $mod+Alt+Shift+minus  resize shrink height 1px

	bindsym $mod+Ctrl+Alt+equal opacity plus  0.1
	bindsym $mod+Ctrl+Alt+minus opacity minus 0.1

	bindsym $mod+apostrophe resize set width 50ppt height 50ppt

#
# Workspaces:
#
	bindsym $mod+1 workspace number 1
	bindsym $mod+2 workspace number 2
	bindsym $mod+3 workspace number 3
	bindsym $mod+4 workspace number 4
	bindsym $mod+5 workspace number 5
	bindsym $mod+6 workspace number 6
	bindsym $mod+7 workspace number 7
	bindsym $mod+8 workspace number 8
	bindsym $mod+9 workspace number 9
	bindsym $mod+0 workspace number 10

	bindsym $mod+a workspace number 1
	bindsym $mod+s workspace number 2
	bindsym $mod+d workspace number 3
	bindsym $mod+f workspace number 4
	bindsym $mod+g workspace number 5
	bindsym $mod+q workspace number 6
	bindsym $mod+w workspace number 7
	bindsym $mod+e workspace number 8
	bindsym $mod+r workspace number 9
	bindsym $mod+t workspace number 10

	bindsym $mod+Ctrl+1 move container to workspace number 1 ; workspace number 1
	bindsym $mod+Ctrl+2 move container to workspace number 2 ; workspace number 2
	bindsym $mod+Ctrl+3 move container to workspace number 3 ; workspace number 3
	bindsym $mod+Ctrl+4 move container to workspace number 4 ; workspace number 4
	bindsym $mod+Ctrl+5 move container to workspace number 5 ; workspace number 5
	bindsym $mod+Ctrl+6 move container to workspace number 6 ; workspace number 6
	bindsym $mod+Ctrl+7 move container to workspace number 7 ; workspace number 7
	bindsym $mod+Ctrl+8 move container to workspace number 8 ; workspace number 8
	bindsym $mod+Ctrl+9 move container to workspace number 9 ; workspace number 9
	bindsym $mod+Ctrl+0 move container to workspace number 10; workspace number 10

	bindsym $mod+Ctrl+a move container to workspace number 1 ; workspace number 1
	bindsym $mod+Ctrl+s move container to workspace number 2 ; workspace number 2
	bindsym $mod+Ctrl+d move container to workspace number 3 ; workspace number 3
	bindsym $mod+Ctrl+f move container to workspace number 4 ; workspace number 4
	bindsym $mod+Ctrl+g move container to workspace number 5 ; workspace number 5
	bindsym $mod+Ctrl+q move container to workspace number 6 ; workspace number 6
	bindsym $mod+Ctrl+w move container to workspace number 7 ; workspace number 7
	bindsym $mod+Ctrl+e move container to workspace number 8 ; workspace number 8
	bindsym $mod+Ctrl+r move container to workspace number 9 ; workspace number 9
	bindsym $mod+Ctrl+t move container to workspace number 10; workspace number 10

#
# Layout stuff:
#
	# Start a terminal
	bindsym $mod+Slash exec "$TERMINAL"
	bindsym $mod+Alt+Slash split toggle

	# Kill focused window
	bindsym $mod+x kill

	bindsym $mod+Alt+z  focus parent
	bindsym $mod+Ctrl+z focus child
	bindsym $mod+b focus mode_toggle
	bindsym $mod+Ctrl+b sticky toggle
	bindsym $mod+Alt+b floating toggle

	bindsym $mod+Backslash       layout toggle tabbed splitv splith
	bindsym $mod+Shift+Backslash layout toggle splith splitv tabbed
	bindsym $mod+Alt+Backslash fullscreen

	bindsym button2 kill
	bindsym button3 floating toggle

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.

exec_always "killall -p waybar; waybar"
exec "mpd"


include /etc/sway/config.d/*
