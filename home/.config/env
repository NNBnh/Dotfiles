# File:         env
# Description:  Environment variables that SuperB
# Author:       NNB
#               └─ https://github.com/NNBnh
# URL:          https://github.com/NNBnh/dots/blob/master/home/.config/env


# =============================================================================
# 1. Paths
# =============================================================================

### XDG base directory
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"

export XDG_DESKTOP_DIR="$HOME/test"
export XDG_DOCUMENTS_DIR="$XDG_DESKTOP_DIR"
export XDG_DOWNLOAD_DIR="$XDG_DESKTOP_DIR"
export XDG_MUSIC_DIR="$HOME/da/music"
export XDG_PICTURES_DIR="$XDG_DESKTOP_DIR"
export XDG_PUBLICSHARE_DIR="$XDG_DESKTOP_DIR"
export XDG_TEMPLATES_DIR="$XDG_DESKTOP_DIR"
export XDG_VIDEOS_DIR="$XDG_DESKTOP_DIR"

### Spring cleaning
# export XAUTHORITY="$XDG_DATA_HOME/xauthority/Xauthority" #FIXME bug
export XINITRC="$XDG_CONFIG_HOME/X11/xinitrc"
export XSERVERRC="$XDG_CONFIG_HOME/X11/xserverrc"
export ICEAUTHORITY="$XDG_CACHE_HOME/ICEauthority"
export INPUTRC="$XDG_CONFIG_HOME/readline/inputrc"
export GNUPGHOME="$XDG_DATA_HOME/gnupg"
export HISTFILE="$XDG_DATA_HOME/bash/history"
export CARGO_HOME="$XDG_DATA_HOME/cargo"
export GTK_RC_FILES="$XDG_CONFIG_HOME/gtk-1.0/gtkrc"
export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc"

[ -z "$TMPDIR" ] && export TMPDIR="/tmp"
export PATH="$PATH:$HOME/.local/bin"


# =============================================================================
# 2. Visual
# =============================================================================

export BUI_CURSOR="block"
export BUI_OPACITY="0.9"
export BUI_FONT_FAMILY="Iosevka Extended"
export BUI_FONT_SIZE="10.0"
export BUI_BORDER_SIZE="2.0"
export BUI_GAPS_SIZE="16.0"

## Colors ---------------------------------------------------------------------

export BUI_COLOR_DARK="#181818"
export BUI_COLOR_DARK_ALT="#282828"
export BUI_COLOR_BLACK="#383838"
export BUI_COLOR_GRAY="#585858"
export BUI_COLOR_GREY="#B8B8B8"
export BUI_COLOR_WHITE="#D8D8D8"
export BUI_COLOR_LIGHT_ALT="#E8E8E8"
export BUI_COLOR_LIGHT="#F8F8F8"
export BUI_COLOR_BROWN="#A16946"
export BUI_COLOR_RED="#AB4642"
export BUI_COLOR_ORANGE="#DC9656"
export BUI_COLOR_YELLOW="#F7CA88"
export BUI_COLOR_LIME="#A1B56C"
export BUI_COLOR_GREEN=""
export BUI_COLOR_TEAR=""
export BUI_COLOR_CYAN="#86C1B9"
export BUI_COLOR_BLUE="#7CAFC2"
export BUI_COLOR_PURPLE=""
export BUI_COLOR_MAGENTA="#BA8BAF"
export BUI_COLOR_PINK=""

### Elements
export BUI_COLOR_MAIN="$BUI_COLOR_YELLOW"
export BUI_COLOR_MAIN_ALT="$BUI_COLOR_GREY"
export BUI_COLOR_FOREGROUND="$BUI_COLOR_WHITE"
export BUI_COLOR_BACKGROUND="$BUI_COLOR_DARK"
export BUI_COLOR_FOREGROUND_ALT="$BUI_COLOR_GRAY"
export BUI_COLOR_BACKGROUND_ALT="$BUI_COLOR_DARK_ALT"
export BUI_COLOR_CURSOR="$BUI_COLOR_MAIN"
export BUI_COLOR_CURSOR_ALT="$BUI_COLOR_MAIN_ALT"
export BUI_COLOR_SELECTION="$BUI_COLOR_GRAY"

### Base16
export BUI_COLOR_BASE00="$BUI_COLOR_DARK"
export BUI_COLOR_BASE01="$BUI_COLOR_DARK_ALT"
export BUI_COLOR_BASE02="$BUI_COLOR_BLACK"
export BUI_COLOR_BASE03="$BUI_COLOR_GRAY"
export BUI_COLOR_BASE04="$BUI_COLOR_GREY"
export BUI_COLOR_BASE05="$BUI_COLOR_WHITE"
export BUI_COLOR_BASE06="$BUI_COLOR_LIGHT_ALT"
export BUI_COLOR_BASE07="$BUI_COLOR_LIGHT"
export BUI_COLOR_BASE08="$BUI_COLOR_RED"
export BUI_COLOR_BASE09="$BUI_COLOR_ORANGE"
export BUI_COLOR_BASE0A="$BUI_COLOR_YELLOW"
export BUI_COLOR_BASE0B="$BUI_COLOR_LIME"
export BUI_COLOR_BASE0C="$BUI_COLOR_CYAN"
export BUI_COLOR_BASE0D="$BUI_COLOR_BLUE"
export BUI_COLOR_BASE0E="$BUI_COLOR_MAGENTA"
export BUI_COLOR_BASE0F="$BUI_COLOR_BROWN"

### Terminal
export BUI_COLOR_TERMINAL000="$BUI_COLOR_DARK_ALT"
export BUI_COLOR_TERMINAL001="$BUI_COLOR_RED"
export BUI_COLOR_TERMINAL002="$BUI_COLOR_LIME"
export BUI_COLOR_TERMINAL003="$BUI_COLOR_YELLOW"
export BUI_COLOR_TERMINAL004="$BUI_COLOR_BLUE"
export BUI_COLOR_TERMINAL005="$BUI_COLOR_MAGENTA"
export BUI_COLOR_TERMINAL006="$BUI_COLOR_CYAN"
export BUI_COLOR_TERMINAL007="$BUI_COLOR_GREY"
export BUI_COLOR_TERMINAL008="$BUI_COLOR_GRAY"
export BUI_COLOR_TERMINAL009="$BUI_COLOR_RED"
export BUI_COLOR_TERMINAL010="$BUI_COLOR_LIME"
export BUI_COLOR_TERMINAL011="$BUI_COLOR_YELLOW"
export BUI_COLOR_TERMINAL012="$BUI_COLOR_BLUE"
export BUI_COLOR_TERMINAL013="$BUI_COLOR_MAGENTA"
export BUI_COLOR_TERMINAL014="$BUI_COLOR_CYAN"
export BUI_COLOR_TERMINAL015="$BUI_COLOR_LIGHT_ALT"

### Other
export BUI_COLOR_TEXTART="93"


# =============================================================================
# 4. Default applications
# =============================================================================
export FINDER="fzf"
export LIST="exa"
export EDITOR="kak"
export VISUAL="$EDITOR"
export PAGER="sh -c \"col -b -x | kak\""
export MANPAGER="sh -c \"col -b -x | kak -e 'set buffer filetype man'\""
export TERMINAL="kitty"
export BROWSER="firefox"


# =============================================================================
# 3. Setting
# =============================================================================

export EXA_DEFAULT_OPTS="--all --group-directories-first --long --header --git --colour='always'"
export ABDUCO_CMD="$SHELL"
export FIGLET_FONTDIR="$XDG_DATA_HOME/figlet/fonts"
export BFETCH_PROMPT_HEIGHT="3"

### FZF
export FZF_DEFAULT_COMMAND="fd --hidden --follow --exclude '.git'"
export FZF_DEFAULT_OPTS="--height='24'
                         --layout='reverse'
                         --info='inline'
                         --prompt=':'
                         --pointer='>'
                         --marker='*'
                         --ansi
                         --tabstop='4'

                         --preview-window='right:60%:sharp:cycle:hidden'

                         --color='fg:-1'
                         --color='fg+:$BUI_COLOR_BACKGROUND:regular'
                         --color='bg:-1'
                         --color='bg+:$BUI_COLOR_CURSOR'
                         --color='hl:-1:underline'
                         --color='hl+:$BUI_COLOR_BACKGROUND:underline'
                         --color='preview-fg:-1'
                         --color='preview-bg:-1'
                         --color='gutter:-1'
                         --color='info:$BUI_COLOR_CURSOR'
                         --color='border:$BUI_COLOR_FOREGROUND_ALT'
                         --color='prompt:$BUI_COLOR_CURSOR'
                         --color='pointer:$BUI_COLOR_CURSOR'
                         --color='marker:$BUI_COLOR_CURSOR_ALT'
                         --color='spinner:$BUI_COLOR_FOREGROUND_ALT'
                         --color='header:$BUI_COLOR_FOREGROUND_ALT'

                         --bind='left-click:accept'
                         --bind='right-click:abort'
                         --bind='double-click:accept'
                         --bind='up:up'
                         --bind='shift-up:preview-up'
                         --bind='down:down'
                         --bind='shift-down:preview-down'
                         --bind='left:backward-char'
                         --bind='shift-left:backward-word'
                         --bind='right:forward-char'
                         --bind='shift-right:forward-word'
                         --bind='pgup:page-up'
                         --bind='pgdn:page-down'
                         --bind='home:beginning-of-line'
                         --bind='end:end-of-line'
                         --bind='bspace:backward-delete-char'
                         --bind='del:delete-char'
                         --bind='tab:toggle-out'
                         --bind='btab:toggle-in'
                         --bind='ctrl-a:select-all'
                         --bind='ctrl-c:abort'
                         --bind='ctrl-q:abort'
                         --bind='alt-i:up'
                         --bind='alt-k:down'
                         --bind='alt-j:backward-char'
                         --bind='alt-l:forward-char'
                         --bind='alt-u:backward-word'
                         --bind='alt-o:forward-word'
                         --bind='alt-w:deselect-all'
                         --bind='alt-s:select-all'
                         --bind='alt-a:toggle'
                         --bind='alt-y:toggle-preview'
                         --bind='alt-d:accept'
                         --bind='alt-f:abort'
                         --bind='alt-x:backward-delete-char'"

### FZF
export BFM_LIST="bls"
export BFM_RAW="bls true"
export BFM_FINDER="fzf"
export BFM_PREVIEWER="$LIST $EXA_DEFAULT_OPTS"
export BFM_OPTIONS=""

exit 0
