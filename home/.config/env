#!/bin/sh


# XDG base directory
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"

export XDG_DESKTOP_DIR="$HOME/test"
export XDG_DOCUMENTS_DIR="$XDG_DESKTOP_DIR"
export XDG_DOWNLOAD_DIR="$XDG_DESKTOP_DIR"
export XDG_MUSIC_DIR="$XDG_DESKTOP_DIR"
export XDG_PICTURES_DIR="$XDG_DESKTOP_DIR"
export XDG_PUBLICSHARE_DIR="$XDG_DESKTOP_DIR"
export XDG_TEMPLATES_DIR="$XDG_DESKTOP_DIR"
export XDG_VIDEOS_DIR="$XDG_DESKTOP_DIR"

# export XAUTHORITY="$XDG_DATA_HOME/xauthority/Xauthority"
# startx "$XDG_CONFIG_HOME/X11/xinitrc" -- "$XDG_CONFIG_HOME/X11/xserverrc" vt1
export XINITRC="$XDG_CONFIG_HOME/X11/xinitrc"
export XSERVERRC="$XDG_CONFIG_HOME/X11/xserverrc"
export ICEAUTHORITY="$XDG_CACHE_HOME/ICEauthority"
export INPUTRC="$XDG_CONFIG_HOME/readline/inputrc"
export GNUPGHOME="$XDG_DATA_HOME/gnupg"
# gpg2 --homedir "$XDG_DATA_HOME/gnupg"
export HISTFILE="$XDG_DATA_HOME/bash/history"
export CARGO_HOME="$XDG_DATA_HOME/cargo"
export GTK_RC_FILES="$XDG_CONFIG_HOME/gtk-1.0/gtkrc"
export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc"

export PATH="$PATH:$HOME/.local/bin"


# Default applications
export EDITOR="/usr/bin/kak"
export VISUAL="$EDITOR"
export PAGER="$HOME/.local/bin/kak-pager"
export MANPAGER="$HOME/.local/bin/kak-manpager"
export TERMINAL="/usr/bin/kitty"
export BROWSER="/usr/bin/firefox"


exit 0
