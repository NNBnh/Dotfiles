export XDG_DESKTOP_DIR="$HOME/t"
export XDG_DOCUMENTS_DIR="$XDG_DESKTOP_DIR"
export XDG_DOWNLOAD_DIR="$XDG_DESKTOP_DIR"
export XDG_MUSIC_DIR="$HOME/d/music"
export XDG_PICTURES_DIR="$XDG_DESKTOP_DIR"
export XDG_PUBLICSHARE_DIR="$XDG_DESKTOP_DIR"
export XDG_TEMPLATES_DIR="$XDG_DESKTOP_DIR"
export XDG_VIDEOS_DIR="$XDG_DESKTOP_DIR"

### Spring cleaning
#export XAUTHORITY="$XDG_RUNTIME_DIR/Xauthority"
export USERXSESSION="$XDG_CACHE_HOME/x11/xsession"
export USERXSESSIONRC="$XDG_CACHE_HOME/x11/xsessionrc"
export ALTUSERXSESSION="$XDG_CACHE_HOME/x11/Xsession"
