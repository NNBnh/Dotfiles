export FZF_DEFAULT_OPTS="--height='24'
                         --layout='reverse'
                         --info='inline'
                         --prompt=':'
                         --pointer='>'
                         --marker='*'
                         --ansi
                         --tabstop='4'

                         --preview-window='right:60%:sharp:cycle:hidden'

                         --color='fg:-1'
                         --color='fg+:$BUI_COLOR_BACKGROUND:regular'
                         --color='bg:-1'
                         --color='bg+:$BUI_COLOR_CURSOR'
                         --color='hl:-1:underline'
                         --color='hl+:$BUI_COLOR_BACKGROUND:underline'
                         --color='preview-fg:-1'
                         --color='preview-bg:-1'
                         --color='gutter:-1'
                         --color='info:$BUI_COLOR_CURSOR'
                         --color='border:$BUI_COLOR_FOREGROUND_ALT'
                         --color='prompt:$BUI_COLOR_CURSOR'
                         --color='pointer:$BUI_COLOR_CURSOR'
                         --color='marker:$BUI_COLOR_CURSOR_ALT'
                         --color='spinner:$BUI_COLOR_FOREGROUND_ALT'
                         --color='header:$BUI_COLOR_FOREGROUND_ALT'

                         --bind='left-click:accept'
                         --bind='right-click:abort'
                         --bind='double-click:accept'
                         --bind='up:up'
                         --bind='shift-up:preview-up'
                         --bind='down:down'
                         --bind='shift-down:preview-down'
                         --bind='left:backward-char'
                         --bind='shift-left:backward-word'
                         --bind='right:forward-char'
                         --bind='shift-right:forward-word'
                         --bind='pgup:page-up'
                         --bind='pgdn:page-down'
                         --bind='home:beginning-of-line'
                         --bind='end:end-of-line'
                         --bind='bspace:backward-delete-char'
                         --bind='del:delete-char'
                         --bind='tab:toggle-out'
                         --bind='btab:toggle-in'
                         --bind='ctrl-a:select-all'
                         --bind='ctrl-c:abort'
                         --bind='ctrl-q:abort'
                         --bind='alt-i:up'
                         --bind='alt-k:down'
                         --bind='alt-j:backward-char'
                         --bind='alt-l:forward-char'
                         --bind='alt-u:backward-word'
                         --bind='alt-o:forward-word'
                         --bind='alt-w:deselect-all'
                         --bind='alt-s:select-all'
                         --bind='alt-a:toggle'
                         --bind='alt-y:toggle-preview'
                         --bind='alt-d:accept'
                         --bind='alt-f:abort'
                         --bind='alt-x:backward-delete-char'"

### Dunst
DUNST_POS=$(( ( ${BUI_GAPS_SIZE%%.*} * 2 ) - ${BUI_BORDER_SIZE%%.*} ))
DUNST_OPACITY='1' # DUNST_OPACITY=$(printf '%x' $(printf '%.0f' $(printf '%s\n' "( $BUI_OPACITY * 256 ) - 1" | bc)))
export DUNST_DEFAULT_OPTS="-font '$BUI_FONT_FAMILY $BUI_FONT_SIZE' \
                           -geometry '0x0-$DUNST_POS+$DUNST_POS' \
                           -separator_height '$BUI_BORDER_SIZE' \
                           -padding '$BUI_BORDER_SIZE' \
                           -horizontal_padding '$BUI_BORDER_SIZE' \
                           -frame_width '$BUI_BORDER_SIZE' \
                           -markup 'full' \
                           -format '<b>%s</b>\n%b' \
                           -icon_path '' \
                           -icon_position 'left' \
                           -max_icon_size '$(( ${BUI_GAPS_SIZE%%.*} * 2 ))' \
                           -show_indicators 'false' \
                           -separator_color 'frame' \
                           -lf '$BUI_COLOR_FOREGROUND' \
                           -nf '$BUI_COLOR_FOREGROUND' \
                           -cf '$BUI_COLOR_FOREGROUND' \
                           -lb '$BUI_COLOR_BACKGROUND$DUNST_OPACITY' \
                           -nb '$BUI_COLOR_BACKGROUND$DUNST_OPACITY' \
                           -cb '$BUI_COLOR_BACKGROUND$DUNST_OPACITY' \
                           -lfr '$BUI_COLOR_SELECTION' \
                           -nfr '$BUI_COLOR_SELECTION' \
                           -cfr '$BUI_COLOR_BASE08' \
                           -lto '1' \
                           -nto '3' \
                           -cto '5' \
                           -mouse_left_click 'do_action' \
                           -mouse_right_click 'close_current' \
                           -mouse_middle_click 'close_curren'"

