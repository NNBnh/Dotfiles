[user]
	name = NNB
	email = nnbnh@protonmail.com

[include]
	path = ~/.local/share/git/gitalias.txt

[alias]
	ce = !"read message; git commit --message \"$(jq --raw-output '.gitmojis[] | [.emoji, .description] | join(\": \")' ~/.local/share/git/gitmojis.json | sk --preview-window='0' | sed 's/^\\(.\\).*/\\1/;q') $message\""
	qpush = !"git add --all; git ce; git push origin $(git branch-name); git pull origin $(git branch-name)"
