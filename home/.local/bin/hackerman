# Start
	# Action
	case $1 in
		'i'|'ip')                action="curl --silent ifconfig.me"                                                                ;;
		'c'|'currency'|'money')  action="curl --silent rate.sx"                                                                    ;;
		'r'|'rate')              action="curl --silent rate.sx/btc"                                                                ;;
		'w'|'weather')           action="curl --silent V2.wttr.in"                                                                 ;;
		'a'|'attack')            action="echo 'curl -s -L http://bit.ly/10hA8iC | bash'"                                           ;;
		'M'|'matrix')            action="cmatrix"                                                                                  ;;
		'I'|'info'|'system')     action="glances || { htop || top }"                                                               ;;
		'R'|'run'|'rick')        action="curl -fsSL https://raw.githubusercontent.com/keroserene/rickrollrc/master/roll.sh | bash" ;;
		'S'|'sneakers')          action="sneakers"                                                                                 ;;
		*)                       exit 1                                                                                            ;;
	esac

	# Effect
	case $2 in
		'r'|'l'|'rainbow'|'lolcat') effect="| lolcat" ;;
		'd'|'n'|'decrypt'|'nms')    effect="| nms -a" ;;
		*)                          exit 1            ;;
	esac


# Start
$action $effect


exit
