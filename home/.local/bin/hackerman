# Start
case $1 in
	'')                      nms -a -f green ;;
	'm'|'matrix')            unimatrix -s 95 ;;
	'a'|'attack')            sneakers ;;
	'r'|'run'|'rick')        curl -fsSL https://raw.githubusercontent.com/keroserene/rickrollrc/master/roll.sh | bash ;;
	'c'|'currency'|'money')  curl --silent rate.sx ;;
	's'|'send')
		echo 'curl -s -L http://bit.ly/10hA8iC | bash' | xclip -selection clipboard
		echo 'Send !'
	;;
esac


exit
