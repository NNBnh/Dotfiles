# Values
MODE="${1:-output}"

SAVE_PATH="${SCREENY_SAVE_PATH:-${XDG_PICTURES_DIR:-~}/screenshot_%Y-%m-%d_%H-%M-%S}"
TYPE="${SCREENY_TYPE:-png}"

NAME=$(date +"$SAVE_PATH.$TYPE")


# Start
case "$MODE" in
	'output')
		grim -o "$(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name')" -t "$TYPE" "$NAME"
	;;
	'region')
		grim -g "$(swaymsg --type get_tree | jq -r '.. | select(.pid? and .visible?) | .rect | "\(.x),\(.y) \(.width)x\(.height)"' | slurp)" -t "$TYPE" "$NAME"
	;;
	'color')
		grim -g "$(slurp -p)" -t 'ppm' - | convert - -format '%[pixel:p{0,0}]' txt:- | clipb copy
	;;
esac


exit 0
